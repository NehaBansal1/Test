<h1>Edit </h1>

<%= form_for @student, url: student_path do |f| %>
    <p>
        <%= f.label :rollnum %> <br>
        <%= f.text_field :rollnum %>
    </p>
    
    <p>
        <%= f.label :sname %> <br>
        <%= f.text_field :sname %>
    </p>

    <p>
        <%= f.label :course %> <br>
        <%= f.text_field :course %>
    </p>

    <p>
        <%= f.label :percentage %> <br>
        <%= f.text_field :percentage %>
    </p>


    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back to students List', students_path %>


